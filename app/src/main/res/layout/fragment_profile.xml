<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/layout_margin_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_back"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/open_sans_bold"
                android:text="@string/profile_text"
                android:textAlignment="center"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/text_large" />
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/profile_img_size"
            android:layout_height="@dimen/profile_img_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/profile_image_margin_top"
            android:src="@drawable/profile_img"

            />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/john_doe_william"
            android:textSize="@dimen/profile_name_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin_top"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/history_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/history_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_profile_details" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/personal_details_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/personal_details_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/location_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/location_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_payment_method" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Payment Method"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/payment_method_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/settings_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/settings_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/profile_ic_size"
                    android:layout_height="@dimen/profile_ic_size"
                    android:background="@drawable/ic_profile_background"
                    android:paddingVertical="@dimen/profile_ic_padding_vertical"
                    android:paddingStart="@dimen/profile_ic_padding_start"
                    android:paddingEnd="@dimen/profile_ic_padding_end"
                    android:src="@drawable/ic_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_ic_text_margin"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/help_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Payment_size" />

            </LinearLayout>

            <ImageView
                android:id="@+id/help_forward"
                android:layout_width="@dimen/profile_ic_forward_size"
                android:layout_height="@dimen/profile_ic_forward_size"
                android:src="@drawable/ic_forward"
                android:textAlignment="textEnd"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_menu_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/logout_img"
                android:layout_width="@dimen/profile_ic_size"
                android:layout_height="@dimen/profile_ic_size"
                android:background="@drawable/ic_profile_background"
                android:paddingVertical="@dimen/profile_ic_padding_vertical"
                android:paddingStart="@dimen/profile_ic_padding_start"
                android:paddingEnd="@dimen/profile_ic_padding_end"
                android:src="@drawable/ic_log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_ic_text_margin"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/logout_text"
                android:textColor="@color/black"
                android:textSize="@dimen/Payment_size" />


        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>